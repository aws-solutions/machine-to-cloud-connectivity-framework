{
  "roots": ["<rootDir>/test"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts", "!**/test/*.ts"],
  "coverageReporters": [
    "text",
    ["lcov", {"projectRoot": "../../"}]
  ],
  "setupFiles": ["./test/jest-environment-variables.ts"]
}